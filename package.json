    "react-dom": "^17.0.2",
    "remix": "^1.0.6"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.0",
    "daisyui": "^1.16.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.4",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
